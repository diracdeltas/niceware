{
  "name": "niceware",
  "version": "1.0.1",
  "description": "Utility for converting cryptographic keys into human-readable phrases",
  "keywords": [
    "diceware",
    "passphrase",
    "password",
    "crypto",
    "cryptography",
    "encryption"
  ],
  "homepage": "http://www.github.com/diracdeltas/niceware",
  "main": "lib/main.js",
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ]
        }
      ]
    ]
  },
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-preset-es2015": "^6.18.0",
    "babelify": "^7.3.0",
    "browserify": "^13.1.1",
    "coveralls": "^2.11.15",
    "flow-bin": "^0.35.0",
    "istanbul": "^0.4.5",
    "jsdoc-to-markdown": "^2.0.1",
    "mocha": "^3.1.2",
    "mocha-lcov-reporter": "^1.2.0",
    "nsp": "^2.6.2",
    "optimize-js": "^1.0.2",
    "standard": "^8.1.0",
    "uglify-js": "^2.7.4",
    "uglifyify": "^3.0.4"
  },
  "scripts": {
    "build": "browserify lib/main.js -g uglifyify | uglifyjs -cm | optimize-js > browser/niceware.js",
    "check": "nsp check",
    "coverage": "istanbul cover ./node_modules/mocha/bin/_mocha --report lcovonly -- -R spec",
    "coveralls": "istanbul cover ./node_modules/mocha/bin/_mocha --report lcovonly -- -R spec && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage",
    "jsdoc": "jsdoc2md lib/main.js > docs/api.md",
    "flow": "flow; test $? -eq 0 -o $? -eq 2",
    "test": "mocha"
  },
  "standard": {
    "ignore": [
      "lib/wordlist.js"
    ]
  },
  "author": "yan <yan@mit.edu>",
  "repository": {
    "type": "git",
    "url": "git://github.com/diracdeltas/niceware.git"
  },
  "license": "MIT",
  "dependencies": {
    "binary-search": "^1.3.2",
    "randombytes": "^2.0.3"
  }
}
